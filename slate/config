# Config
config defaultToCurrentScreen true

# 4/10ths left|center|right
bind d:ctrl;shift    move      screenOriginX;screenOriginY screenSizeX*4.3/10;screenSizeY
bind f:ctrl;shift    move screenSizeX*5.7/20;screenOriginY screenSizeX*4.3/10;screenSizeY
bind g:ctrl;shift    move screenSizeX*5.7/10;screenOriginY screenSizeX*4.3/10;screenSizeY

# 6/10ths left|center|right
bind d:ctrl;alt      move      screenOriginX;screenOriginY screenSizeX*5.7/10;screenSizeY
bind f:ctrl;alt      move screenSizeX*4.3/20;screenOriginY screenSizeX*5.7/10;screenSizeY
bind g:ctrl;alt      move screenSizeX*4.3/10;screenOriginY screenSizeX*5.7/10;screenSizeY

# left half | right half
bind left:ctrl;alt   move      screenOriginX;screenOriginY      screenSizeX/2;screenSizeY
bind right:ctrl;alt  move      screenSizeX/2;screenOriginY      screenSizeX/2;screenSizeY

# full screen
bind return:ctrl;alt move      screenOriginX;screenOriginY        screenSizeX;screenSizeY

