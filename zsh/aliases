#!/usr/bin/env zsh
alias sirb="irb --simple-prompt"
alias gotocode="cd ~/Documents/Code/"

alias gpl="git pull --rebase"
alias gpp="gpl; git push" # git pull --rebase; git push
alias gch="git checkout"
alias ga="git add"
alias gs="git status"
alias gd="git difftool"
alias gds="git difftool --staged"
alias gh="git log --graph --oneline"
alias gsp="git stash pop"
alias gsa="git stash apply"
alias gsl="git stash list"

alias dst="docker start"
alias dsp="docker stop"
alias dc="docker ps"
alias dr="docker run"
alias dcr="docker rm"
alias dir="docker rmi"
alias db="docker build"
alias di="docker images"
alias de="docker exec -t -i /bin/zsh"
alias dl="docker logs --tail 15"

gcm() {
	git commit -m "$@"
}

gstash() {
	git stash save "$@"
}
