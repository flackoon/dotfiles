#!/usr/bin/env zsh
alias sirb="irb --simple-prompt"
alias gotocode="cd ~/Documents/Code/"
# Git
alias gf="git fetch"
alias gp="git push"
alias gpf="git push --force-with-lease"
alias gup="git pull"
alias gupr="git pull --rebase"
alias gcm="git commit"
alias gst="scmpuff_status"
alias gh="git log --graph --format=\"%C(bold blue)%h %C(white)| %s | %C(yellow)(%aN) %C(green)%cs\""
alias gsp="git stash pop"
alias gsa="git stash apply"
alias gsl="git stash list"
alias gulc="git reset HEAD~1 --soft" # as in 'git undo last commit'

# Rake/Rails
alias rdm="bundle exec rake db:migrate db:test:prepare"

# Yarn
alias yi="yarn install"
alias yt="yarn test"
alias ts="ts-node"

# Docker
alias dst="docker start"
alias dsp="docker stop"
alias dc="docker ps"
alias dr="docker run"
alias dcr="docker rm"
alias dir="docker rmi"
alias db="docker build"
alias di="docker images"
alias de="docker exec -t -i /bin/zsh"
alias dl="docker logs --tail 15"

gbc(){
  git checkout -b "$@"
}

gm(){
  git merge "$@"
}

gr() {
  git reset "$@"
}

gri(){
  git rebase -i "$@"
}

gre(){
  git restore "$@"
}

gres(){
  git restore --staged "$@"
}

gds() {
  git diff --staged "$@"
}

gch() {
  git checkout "$@"
}
