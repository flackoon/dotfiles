[rerere]
	enabled = true
[alias]
	graph = log --graph --oneline
[core]
	excludesfile = ~/.gitignore
  pager = less -LRc --mouse
[pager]
  diff    = LESS='c --mouse' delta
  show    = LESS='c --mouse' delta
  log     = LESS='c --mouse' delta
  reflog  = LESS='c --mouse' delta
  status  = LESS='c --mouse' delta
[tig]
  mouse = true
[interactive]
	diffFilter = delta --color-only
[delta]
  navigate = true
  side-by-side = true
  line-numbers = true
[difftool]
	prompt = false
[merge]
	tool = vimdiff
  ff = no
[pull]
	rebase = true
[push]
  ff = no
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 82
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[commit]
	gpgsign = true
