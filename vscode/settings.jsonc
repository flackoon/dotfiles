{
  "cSpell.userWords": [
    "appendable",
    "Arrayish",
    "Autopublishing",
    "backoffice",
    "Barplot",
    "Behaviour",
    "brainer",
    "codegen",
    "collateralized",
    "commited",
    "constituion",
    "Craco",
    "Ellipsize",
    "extralight",
    "extrasmall",
    "Failable",
    "finalise",
    "funder",
    "funders",
    "goodbag",
    "hasher",
    "hitpoints",
    "Keyof",
    "kwargs",
    "Mapish",
    "OVERRIDABLE",
    "predeploy's",
    "predeploys",
    "referes",
    "semibold",
    "Stylelint",
    "Timeframe",
    "typecheck",
    "typeof",
    "Xero"
  ],
  "vim.shell": "/bin/zsh",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.textwidth": 120,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.foldfix": true,
  "vim.statusBarColorControl": false,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-d>": true,
    "<C-u>": true
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {"before": ["<leader>", "f"], "commands": ["workbench.action.quickOpen"]},
    {"before": ["<leader>", "s"], "commands": ["workbench.action.findInFiles"]},
    {"before": ["<leader>", "b", "l"], "commands": ["workbench.action.reopenClosedEditor"]},
    {"before": ["<leader>", "b", "o"], "after": ["e:"]},
    {
      "before": ["<leader>", "q", "a"],
      "commands": ["workbench.action.closeAllEditors", "workbench.action.reopenClosedEditor"]
    },
    {"before": ["<C-w>", "v"], "commands": ["workbench.action.splitEditor"]},
    {"before": ["<C-w>", "s"], "commands": ["workbench.action.splitEditorDown"]},
    {
      "before": ["<leader>", "."],
      "commands": ["editor.toggleFold", "editor.action.cancelSelectionAnchor", "extension.vim_escape"]
    },
    // {"before": ["<leader>", ","], "commands": ["editor.createFoldingRangeFromSelection"]},
    {"before": ["<leader>", "/"], "commands": ["editor.action.commentLine"]},
    {"before": ["<leader>", "h", "u"], "commands": ["git.revertSelectedRanges", "git.revertChange"]},
    {"before": ["<leader>", "e"], "commands": ["workbench.action.toggleSidebarVisibility"]},
    {"before": ["u"], "commands": ["undo"]},
    {"before": ["<C-r>"], "commands": ["redo"]},
    {"before": ["<leader>", "g", "d"], "commands": ["editor.action.revealDefinition"]},
    {"before": ["<leader>", "g", "s", "d"], "commands": ["editor.action.revealDefinitionAside"]},
    {"before": ["<leader>", "g", "r"], "commands": ["references-view.findReferences"]},
    {"before": ["<leader>", "r", "n"], "commands": ["editor.action.rename"]},
    {"before": ["<leader>", "*"], "commands": [":nohl"]},
    {"before": ["<C-c>"], "commands": ["search.action.cancel"]},
    {"before": ["<leader>", "c", "f", "p"], "commands": ["copyFilePath"]},
    {"before": ["<leader>", "1"], "commands": ["workbench.files.action.showActiveFileInExplorer"]},
    {"before": ["<leader>", "-"], "commands": ["editor.removeManualFoldingRanges"]},
    {"before": ["<leader>", "r",  "l"], "commands": ["workbench.action.files.save", "extension.rerunLastCommand"]}
  ],
  "vim.visualModeKeyBindings": [
    {"before": ["<BS>"], "commands": ["extension.vim_delete", "extension.vim_escape"]},
    {"before": ["<leader>", "h", "u"], "commands": ["git.revertSelectedRanges", "git.revertChange"]},
    {"before": ["<leader>", "h", "s"], "commands": ["git.stageSelectedRanges", "git.stageChange"]},
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", ","],
      "commands": [
        {"command": "editor.createFoldingRangeFromSelection", "args": []},
        {"command": "cancelSelection", "args": []},
        {"command": "extension.vim_escape", "args": []},
      ]
    },
    {
      "before": ["<leader>", "/"],
      "commands": [
        {"command": "editor.action.commentLine", "args": []},
        {"command": "cancelSelection", "args": []},
        {"command": "extension.vim_escape", "args": []},
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {"before": ["<leader>", "g", "d"], "commands": ["git.openChange"]},
    {"before": ["<leader>", "n"], "commands": ["workbench.action.nextEditor"]},
    {"before": ["<leader>", "p"], "commands": ["workbench.action.previousEditor"]},
    {"before": ["<leader>", "b", "s"], "commands": ["workbench.action.files.save"]},
    {"before": ["<leader>", "b", "c"], "commands": ["workbench.action.closeActiveEditor"]},
    {"before": ["K"], "commands": ["editor.action.showHover"]},
    {"before": ["]", "c"], "commands": ["workbench.action.editor.nextChange"]},
    {"before": ["[", "c"], "commands": ["workbench.action.editor.previousChange"]},
    {"before": ["<leader>", "h", "s"], "commands": ["git.stageSelectedRanges", "git.stageChange"]},
    {"before": ["<leader>", "b", "o"], "commands": ["explorer.newFile"]},
    {"before": ["<C-u>"], "after": ["<C-u>", "zz"]},
    {"before": ["<C-d>"], "after": ["<C-d>", "zz"]},
    {"before": ["<C-y>"], "commands": ["scrollLineUp"]},
    {"before": ["<C-e>"], "commands": ["scrollLineDown"]},
    {"before": ["#"], "after": ["^"]},
    {"before": ["<leader>", "m", "f"], "commands": ["markfiles.markUnmarkActiveFile"]},
    {"before": ["<leader>", "c", "m", "t"], "commands": ["hidecomments.toggle"]},
    {
      "before": ["<leader>", "c", "t"],
      // @info There's a `toggleVsCodeCodeCoverageHighlight` ZSH function that toggles that setting in
      // settings.json, but VSCode Vim is not capable of executing it because it doesn't load ~/.zshrc when
      // creating a new shell. So it's a TODO.
      "commands": [{"command": "coverage-gutters.toggleCoverage", "args": []}]
    }
  ],
  "css.validate": false,
  "editor.tabSize": 2,
  "editor.rulers": [120],
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.tabCompletion": "onlySnippets",
  "editor.defaultFormatter": "NomicFoundation.hardhat-solidity",
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "emmet.triggerExpansionOnTab": true,
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "code-eol.crlfCharacter": "¬",
  "code-eol.newlineCharacter": "¬",
  "code-eol.returnCharacter": "¬",
  "git.openDiffOnClick": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "stylelint.configBasedir": "node_modules/stylelint",
  "stylelint.validate": ["css", "scss"],
  "scss.validate": false,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.linuxExec": "iterm",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "markdown.extension.toc.updateOnSave": false,
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
    // "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[solidity]": {
    "editor.formatOnSave": false
  },
  "editor.acceptSuggestionOnCommitCharacter": false,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.rules.customizations": [{"rule": "*", "severity": "warn"}],
  "search.mode": "reuseEditor",
  "search.usePCRE2": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorTheme": "Everforest Dark",
  // "workbench.colorTheme": "Everforest Light",
  // https://code.visualstudio.com/api/references/theme-color#editor-colors
  "workbench.colorCustomizations": {
    "editor.findMatchHighlightBackground": "#f5b025",
    "editor.findMatchBackground": "#f5b025",
    "editor.selectionBackground": "#f5b02563",
    "editor.wordHighlightBackground": "#f5b02545",
    "markfiles.markedFileColor": "#ffaa0d",
  },
  "explorer.confirmDelete": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableShellIntegration": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "editor.occurrencesHighlight":"multiFile",
  "workbench.tree.enableStickyScroll": true,
  "workbench.panel.showLabels": false,
  "editor.renderWhitespace": "trailing",
  "[markdown]": {
    "editor.wordWrapColumn": 120,
    "editor.wordWrap": "off"
  },
  "gitlens.blame.avatars": false,
  "prettier.printWidth": 120,
  "gitlens.codeLens.enabled": false,
  "window.commandCenter": true,
  "workbench.layoutControl.enabled": false,
  "githubPullRequests.pullBranch": "never",
  "editor.stickyScroll.enabled": true,
  "window.newWindowDimensions": "offset",
  "solidity.telemetry": false,
  "solidity-language-server.trace.server.verbosity": "message",
  "solidity.formatter": "forge",
  "editor.letterSpacing": -0.25,
  "editor.fontWeight": "450",
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontLigatures": true,
  "solidity-va.deco.argumentsMode": "symbol only",
  "workbench.startupEditor": "none",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "yaml": false,
    "solidity": false
  },
  "solidity-va.tools.surya.option.negmodifiers": true,
  "solidity-va.uml.actors.enable": true,
  "codesnap.reallinenumbers": true,
  "codesnap.shutteraction": "copy",
  "codesnap.target": "window",
  "codesnap.transparentbackground": true,
  "codesnap.containerpadding": "1em",
  "codesnap.backgroundcolor": "#00bcff",
  "codesnap.boxshadow": "rgba(0, 0, 0, 0.55) 0px 0px 10px",
  "solidity-va.deco.arguments": false,
  "editor.accessibilitySupport": "off",
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 3,
  "inline-bookmarks.view.expanded": true,
  "telemetry.telemetryLevel": "off",
  "markfiles.colorMarkedFile": "both",
  "markfiles.markedFileIcon": "🔸",
  "inline-bookmarks.expert.custom.words.mapping": {
    "orange": ["@lead", "@warn", "@issue-known"],
    "blue": ["@info", "@checked"],
    "purple": ["@mutate"],
    "yellow": ["@check"],
    "green": ["@ok"],
    "dark-green": ["@submitted"],
    "red": ["@issue"],
    "burgundy": ["@todo"],
    "aqua": ["@poc"],
    "aqua-light": ["@add", "@add-start", "@add-end", "@changed"]
  },
  "inline-bookmarks.expert.custom.styles": {
    "aqua":       {"gutterIconColor": "#32a8a6",                "color": "#32a8a6"},
    "aqua-light": {"gutterIconColor": "rgba(50, 168, 166, .6)", "color": "rgba(50, 168, 166, .6)"},
    "orange":     {"gutterIconColor": "#f5a142",                "color": "#f5a142"},
    "blue":       {"gutterIconColor": "rgba(66, 161, 245, .3)", "color": "#42a1f5"},
    "purple":     {"gutterIconColor": "rgba(206, 51, 214, .3)", "color": "#ce33d6"},
    "yellow":     {"gutterIconColor": "#FFC300",                "color": "#FFC300"},
    "green":      {"gutterIconColor": "rgba(167, 232, 37, .3)", "color": "#a7e825"},
    "dark-green": {"gutterIconColor": "rgba(0, 163, 0, .3)",    "color": "#00A300"},
    "red":        {"gutterIconColor": "#fc1c03",                "color": "#fc1c03"},
    "burgundy":   {"gutterIconColor": "#a31202",                "color": "#a31202"},
  },
  "markfiles.autoloadFromScope": true,
  "editor.lineHeight": 1.35,
  "solidity.defaultCompiler": "localFile",
  "coverage-gutters.showLineCoverage": true,
  "hideComments.regex": [{"regex": "\/\\*\\s.*\\s\\*\/|\\/\\s{2,}\\*.*|\/{2,3}.*", "flags": "gm"}],
  "window.density.editorTabHeight": "compact",
  "codesnap.showWindowControls": false,
  "codesnap.showLineNumbers": false,
  "editor.defaultFoldingRangeProvider": "NomicFoundation.hardhat-solidity",
  "workbench.activityBar.location": "hidden",
  // Not working well yet
  "editor.multiDocumentOccurrencesHighlight": false,
  "window.confirmSaveUntitledWorkspace": false,
  "git.openRepositoryInParentFolders": "never",
  "search.searchEditor.defaultNumberOfContextLines": 0,
  "editor.fontSize": 12.3,
  "makefile.configureOnOpen": true,
  "extensions.ignoreRecommendations": true
}
